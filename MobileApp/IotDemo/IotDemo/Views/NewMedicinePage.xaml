<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="IotDemo.Views.NewMedicinePage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15">
			<Label Text="Patient Name" FontSize="Medium" />
			<Entry Text="{Binding Item.Text}" FontSize="Small" />
			<Label Text="Medicine Name" FontSize="Medium" />
			<Editor Text="{Binding Item.Description}" FontSize="Small" Margin="0" />
            <Label Text="Doctor's Name" FontSize="Medium" />
            <Entry Text="{Binding Item.Text}" FontSize="Small" />
            <Label Text="Medicine Alarm Time" FontSize="Medium" />
            <TimePicker Time="{Binding Item.MedicineAlarmTime}" Margin="0" />
        </StackLayout> 
	</ContentPage.Content>
</ContentPage>
