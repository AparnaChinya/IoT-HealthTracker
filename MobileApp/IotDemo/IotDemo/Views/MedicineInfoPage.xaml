<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IotDemo.Views.MedicineInfoPage"
             Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Item.Name}" FontSize="Medium"/>
        <Label Text="{Binding Item.Medicine}" FontSize="Medium"/>
        <Label Text="{Binding Item.DoctorName}" FontSize="Medium"/>
        <Label Text="Medicine Alarm Time"/>
        <TimePicker x:Name="MedicineAlarmTime" Time="{Binding Item.MedicineAlertTime}" />
    </StackLayout>
</ContentPage>